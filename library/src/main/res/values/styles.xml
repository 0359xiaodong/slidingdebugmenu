<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sdm.Button" parent="android:Widget.Holo.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Widget.Sdm.Button.Transparent" parent="@style/Widget.Sdm.Button">
        <item name="android:background">@drawable/sdm__transparent_clickable</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Widget.Sdm.TextView.ModuleTitle" parent="android:Widget.Holo.TextView">
        <item name="android:textColor">@color/sdm__module_title</item>
        <item name="android:background">@drawable/sdm__module_title_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Sdm.TextView.PropertySimple" parent="android:Widget.Holo.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Sdm.TextView.PropertyName" parent="@style/Widget.Sdm.TextView.PropertySimple">
        <item name="android:textColor">@color/sdm__module_property_name</item>
        <item name="android:layout_weight">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Sdm.TextView.PropertyValue" parent="@style/Widget.Sdm.TextView.PropertySimple">
        <item name="android:layout_weight">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/sdm__module_property_value</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Widget.Sdm.Spinner" parent="@style/Widget.AppCompat.Base.Spinner">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>


</resources>